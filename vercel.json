{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/next",
      "config": {
        "includeFiles": [
          "packages/**",
          "server/**"
        ]
      }
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "buildCommand": "npm run vercel-build",
  "installCommand": "npm install --legacy-peer-deps"
}