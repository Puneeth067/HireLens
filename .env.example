# HireLens Environment Configuration
# Copy this file to .env and configure your settings

# ================================
# APPLICATION SETTINGS
# ================================
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development
APP_NAME=HireLens
APP_VERSION=1.0.0

# ================================
# API CONFIGURATION
# ================================
# Backend API URL - Update for production
NEXT_PUBLIC_API_URL=http://localhost:8000
API_BASE_URL=http://localhost:8000

# API Keys and Authentication
API_SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production

# ================================
# DATABASE CONFIGURATION
# ================================
# Currently using JSON file storage
# Future PostgreSQL configuration:
# DATABASE_URL=postgresql://username:password@localhost:5432/hirelens
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=hirelens
# DB_USER=username
# DB_PASSWORD=password

# ================================
# FILE STORAGE
# ================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,docx,doc,txt

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_LEVEL=INFO
ENABLE_STRUCTURED_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true
LOG_FILE_PATH=logs/hirelens.log

# Frontend Logging
NEXT_PUBLIC_LOGGING_ENDPOINT=/api/logging/frontend
NEXT_PUBLIC_LOG_LEVEL=info
NEXT_PUBLIC_ENABLE_REMOTE_LOGGING=true

# ================================
# CACHE CONFIGURATION
# ================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=300
ENABLE_CACHING=true

# ================================
# EXTERNAL SERVICES
# ================================
# AI/ML Services (if using external APIs)
OPENAI_API_KEY=your-openai-key-here
HUGGINGFACE_API_KEY=your-huggingface-key-here

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@hirelens.com

# ================================
# SECURITY SETTINGS
# ================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# ================================
# MONITORING & ANALYTICS
# ================================
# Application monitoring
SENTRY_DSN=your-sentry-dsn-here
ENABLE_METRICS=true
METRICS_PORT=9090

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXX-X
ENABLE_ANALYTICS=false

# ================================
# DEVELOPMENT SETTINGS
# ================================
# Hot reload and debugging
ENABLE_HOT_RELOAD=true
DEBUG_MODE=true
ENABLE_PROFILING=false

# Testing
TEST_DATABASE_URL=sqlite:///test.db
ENABLE_TEST_MODE=false

# ================================
# PRODUCTION OVERRIDES
# ================================
# These will be used in production environment

# Production API URLs
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com
# API_BASE_URL=https://api.yourdomain.com

# Production Database
# DATABASE_URL=postgresql://prod_user:prod_pass@db.yourdomain.com:5432/hirelens_prod

# Production Security
# API_SECRET_KEY=super-secure-production-secret-key
# JWT_SECRET=super-secure-jwt-secret-for-production

# Production File Storage (e.g., AWS S3)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=hirelens-production-files
# AWS_REGION=us-east-1

# Production Logging
# LOG_LEVEL=WARN
# SENTRY_DSN=https://your-production-sentry-dsn

# Production CORS
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ================================
# FEATURE FLAGS
# ================================
ENABLE_ASYNC_PROCESSING=true
ENABLE_BULK_OPERATIONS=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_SKILL_EXTRACTION=true
ENABLE_PDF_OCR=false
ENABLE_DOCUMENT_PREVIEW=true
ENABLE_EXPORT_FEATURES=true

# ================================
# RESOURCE LIMITS
# ================================
MAX_CONCURRENT_PROCESSES=4
MAX_MEMORY_USAGE_MB=1024
MAX_PROCESSING_TIME_SECONDS=300
MAX_COMPARISON_BATCH_SIZE=100

# ================================
# THIRD-PARTY INTEGRATIONS
# ================================
# Job boards integration
INDEED_API_KEY=your-indeed-api-key
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Resume parsing services
AFFINDA_API_KEY=your-affinda-api-key
TEXTKERNEL_API_KEY=your-textkernel-api-key

# Skills databases
EMSI_CLIENT_ID=your-emsi-client-id
EMSI_CLIENT_SECRET=your-emsi-client-secret